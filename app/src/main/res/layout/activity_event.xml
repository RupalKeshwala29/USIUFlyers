<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/grey"
    tools:context=".EventActivity">

    <ImageView
        android:layout_width="200dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_height="100dp" />

    <TextView
        android:text="Event Editor"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"

        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textColor="#FFFF"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name" />

    <EditText
        android:background="@drawable/rounded_edittext"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="center"
        android:hint="Enter name of the Event"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/editTextEventName" />

    <TextView
        android:textColor="#FFFF"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue" />

    <EditText
        android:background="@drawable/rounded_edittext"
        android:textColor="#000"
        android:hint="Venue"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/editTextVenue" />

    <TextView
        android:textColor="#FFFF"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group" />

    <EditText
        android:background="@drawable/rounded_edittext"
        android:textColor="#000"
        android:hint="Group"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/editTextUserGroup" />
    <TextView
        android:textColor="#FFFF"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time" />

    <EditText
        android:background="@drawable/rounded_edittext"
        android:textColor="#000"
        android:hint="Time of Event"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/editTextTime" />

    <TextView
        android:textColor="#FFFF"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date" />

    <EditText
        android:background="@drawable/rounded_edittext"
        android:textColor="#000"
        android:hint="Enter Date"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/editTextDate" />



    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_buttons"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Create Event"
        android:id="@+id/buttonCreateEvent" />


    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_buttons"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Modify Event"
        android:id="@+id/buttonModifyEvent" />

</LinearLayout>